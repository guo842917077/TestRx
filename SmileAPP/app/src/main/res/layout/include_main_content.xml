<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tjpld.smileapp.config.widget.MainViewPager
        android:id="@+id/viewpager_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/grayLine" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/y95"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y10"
        android:paddingTop="@dimen/y5"
        android:weightSum="3">

        <RadioButton
            android:id="@+id/radio_smile"
            style="@style/RadioButtonBottomTab"
            android:checked="true"
            android:drawableTop="@drawable/selector_smile_status"
            android:text="笑话"
            android:textSize="@dimen/text_12" />

        <RadioButton
            android:id="@+id/radio_code"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/selector_smile_status"
            android:text="功能"
            android:textSize="@dimen/text_12" />

        <RadioButton
            android:id="@+id/radio_setting"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/selector_smile_status"
            android:gravity="center"
            android:text="设置"
            android:textSize="@dimen/text_12" />
    </RadioGroup>
</LinearLayout>